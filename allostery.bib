journal = {PLoS One},
keywords = {Algorithms,Amino Acid Sequence,Amino Acid Substitution,Databases,Information Storage and Retrieval,Molecular Sequence Data,Protein,Proteins,Proteins: chemistry},
month = {jun},
number = {6},
pages = {e10779},
publisher = {Public Library of Science},
title = {{Validation of Coevolving Residue Algorithms via Pipeline Sensitivity Analysis: ELSC and OMES and ZNMI, Oh My!}},
url = {http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0010779 http://dx.plos.org/10.1371/journal.pone.0010779},
volume = {5},
year = {2010}
