pages = {13528--13533},
title = {{Structural conservation of druggable hot spots in protein-protein interfaces}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=3158149{\&}tool=pmcentrez{\&}rendertype=abstract http://www.pnas.org/cgi/doi/10.1073/pnas.1101835108},
