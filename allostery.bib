pages = {184--190},
title = {{PSICOV: precise structural contact prediction using sparse inverse covariance estimation on large multiple sequence alignments}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/22101153 http://bioinformatics.oxfordjournals.org/cgi/doi/10.1093/bioinformatics/btr638},
