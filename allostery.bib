journal = {BMC Bioinformatics},
keywords = {Algorithms,Amino Acids,Amino Acids: chemistry,Computer Simulation,Enzymes,Enzymes: chemistry,Evolution,Molecular,Mutation,Protein Conformation,Proteins,Proteins: chemistry,Proteins: genetics,Sequence Alignment,Sequence Alignment: methods},
month = {jan},
number = {1},
pages = {118},
title = {{H2rs: Deducing evolutionary and functionally important residue positions by means of an entropy and similarity based analysis of multiple sequence alignments}},
