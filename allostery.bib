title = {{Fpocket: An open source platform for ligand pocket detection}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=2700099{\&}tool=pmcentrez{\&}rendertype=abstract http://www.biomedcentral.com/1471-2105/10/168},
volume = {10},
