title = {{Allosteric determinants in guanine nucleotide-binding proteins}},
url = {http://www.pubmedcentral.nih.gov/articlerender.fcgi?artid=283611{\&}tool=pmcentrez{\&}rendertype=abstract http://www.pnas.org/cgi/doi/10.1073/pnas.1835919100},
